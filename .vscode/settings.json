{
  // 控制相关文件嵌套展示
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.env": "$(capture).env.*",
    ".eslintrc.js": ".commitlintrc.js,.prettierrc.js,.stylelintrc.js",
    "package.json": "pnpm-lock.yaml,.gitignore,README*",
    "vite.config.ts": "index.html,windi.config.ts,tsconfig.json,tsconfig.*.json"
  },
  "i18n-ally.localesPaths": ["src/locales"],
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.regex.key": ".*?",
  "i18n-ally.keysInUse": ["date.long.*", "yeah"],
  "i18n-ally.keystyle": "nested"
}
